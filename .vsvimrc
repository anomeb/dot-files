set incsearch
set hlsearch
set ignorecase
set smartcase
set nonumber

"""""""""""""""""""""""""""""""""""""
" Mappings configurationn
"""""""""""""""""""""""""""""""""""""

"tabs
nnoremap th  :tabfirst<CR>
nnoremap tk  :tabnext<CR>
nnoremap tj  :tabprev<CR>
nnoremap tl  :tablast<CR>
nnoremap tt  :tabedit<Space>
nnoremap tn  :tabnext<Space>
nnoremap tm  :tabm<Space>
nnoremap td  :tabclose<CR>


nnoremap <Space> <nop>
let mapleader = "\<space>"

"""""""""""""""""""""""""""""""""""""
"Copy paste to system clipboard
"""""""""""""""""""""""""""""""""""""
nnoremap <leader>v "+p
vnoremap <leader>v "+p

nnoremap <leader>y "+y
vnoremap <leader>y "+y

nnoremap <leader>p "+p
vnoremap <leader>p "+p
"""""""""""""""""""""""""""""""""""""

nnoremap <leader>w :w<CR>

"""""""""""""""""""""""""""""""""""""
"VS commands
"""""""""""""""""""""""""""""""""""""
nnoremap <leader>gb :vsc View.NavigateBackward<CR>
nnoremap <leader>gf :vsc View.NavigateForward<CR>
nnoremap <leader>gr :vsc Edit.FindAllReferences<CR>
nnoremap <leader>gi :vsc Edit.GoToImplementation<CR>
nnoremap <leader>rr :vsc Refactor.Rename<CR>
nnoremap <leader>nh :nohl<CR>
map <leader>to :vsc File.CloseAllButThis<CR>
map <leader>tk :vsc Window.KeepTabOpen<CR>
map <leader>, :vsc Edit.GoToAll<CR>
map <leader>, :vsc Edit.NavigateTo<CR>
nnoremap <C-o> :vsc View.NavigateBackward<CR>
nnoremap <C-i> :vsc View.NavigateForward<CR>
nnoremap <leader>q :vsc Window.ActivateQuickLaunch<CR>
vnoremap <leader>cc :vsc Edit.CommentSelection<CR>
vnoremap <leader>cu :vsc Edit.UncommentSelection<CR>

"while folding levels are not implemented
nnoremap zm :vsc Edit.CollapsetoDefinitions<CR>
nnoremap zr :vsc Edit.StopOutlining<CR>
"""""""""""""""""""""""""""""""""""""
"Resharper
"""""""""""""""""""""""""""""""""""""

nnoremap <leader>Rt :vsc ReSharper_ToggleSuspended<CR>

nnoremap <leader>ur :vsc ReSharper.ReSharper_UnitTestSessionRepeatPreviousRun<CR>

nnoremap <leader>rm :vsc ReSharper.ReSharper_Move<CR>
nnoremap <leader>. :vsc ReSharper_AltEnter<CR>
vnoremap <leader>rem :vsc ReSharper.ReSharper_ExtractMethod<CR>
nnoremap <leader>rei :vsc ReSharper.ReSharper_ExtractInterface<CR>
nnoremap <leader>rec :vsc ReSharper.ReSharper_ExtractClass<CR>
nnoremap <leader>res :vsc ReSharper.ReSharper_ExtractSuperclass<CR>

"""""""""""""""""""""""""""""""""""""
"Windows
"""""""""""""""""""""""""""""""""""""

map <silent> <C-j> :wincmd j<CR>
map <silent> <C-k> :wincmd k<CR>
map <silent> <C-h> :wincmd h<CR>
map <silent> <C-l> :wincmd l<CR>
